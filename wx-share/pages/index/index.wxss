/**index.wxss**/

.card {
  width: 95%;
  background-color: #fff;
  margin: 20rpx auto 0;
  border-radius: 20rpx;
}

.carDesc {
  color: #999;
  line-height: 65rpx;
  margin: 0 15rpx 0 15rpx;
}

.card-content image {
  width: 100%;
  height: 300rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

.share image {
  width: 35rpx;
  height: 30rpx;
  display: inline-block;
  margin: 10rpx 0 0 0;
}

.carDesc2 text {
  font-size: 22rpx;
}

.carDesc2 button {
  width: 20%;
  display: inline-block;
  height: 50rpx;
  float: right;
  line-height: 50rpx;
}

#shareBtn {
  padding: 0;
  margin: 0;
  width: 42%;
  display: inline-block;
  height: 50rpx;
  float: right;
  line-height: 50rpx;
  background-color: #fff;
  color: #999;
  text-align: right;
}

#shareBtn::after {
  border: none !important;
}

button[type="primary"] {
  color: #fff;
  background-color: #20b3ad;
  font-size: 26rpx;
  margin-top: 10rpx;
}
